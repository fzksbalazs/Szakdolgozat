<%- include('../includes/header.ejs') %>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <section class="cart">
                <div class="cartHeader">
                    <h1>KOSÁR</h1>
                </div>
                <% if (products.length> 0) { %>
                    <% for (let product of products) { %>
                        <article class="product">
                            <div class="container">
                                <header>
                                    <a class="remove">
                                        <img src="<%= product.productData.imageUrl %>" alt="">
                                        <form action="item-delete" method="POST">
                                            <input type="hidden" name="productId" value="<%= product.productData.id %>">
                                            <h3><button class="btn" type="submit">TÖRÖL</button></h3>
                                        </form>
                                    </a>
                                </header>

                                <div class="midContent">
                                    <h1>
                                        <%= product.productData.title %>
                                    </h1>
                                </div>

                                <div class="footerContent">
                                    <div class="row">
                                        <div class="col-sm">
                                            <span class="qt-minus">-</span>
                                            <span class="qt">
                                                <%= product.qty %>
                                            </span>
                                            <span class="qt-plus">+</span>
                                        </div>
                                        <div class="col-sm">
                                            <h2 class="price">
                                                1 darab: <%=product.productData.price%> Ft
                                            </h2>                                            
                                        </div>
                                        <div class="col-sm"> 
                                            <h2 class="full-price">
                                                <%= product.totalPrice=product.productData.price * product.qty %> Ft
                                            </h2>                                           
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                        <% } %>
                            <div class="Sitefooter">
                                <div class="container clearfix">
                                    <h1 class="total">Összesen: <span>499.999</span> Ft</h1>
                                    <div class="row">                             
                                        <div class="col">
                                            <a class="btnSearchCheck" href="/products">BÖNGÉSSZEN TOVÁBB!</a>
                                        </div>
                                        <div class="col">                    
                                            <form action="/create-order" method="POST">
                                                <button type="submit" class="btnSearchCheck">FIZETÉS</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } else { %>
                                <div class="noProductsInCart">
                                    <h1>Még nem adott hozzá terméket!</h1>
                                    <h2>Adjon hozzá egy terméket!</h2>
                                    <div class="text-center">
                                        <a class="box-btn" href="/products">TERMÉKEK MEGTEKINTÉSE</a>
                                    </div>
                                </div>
                                <% } %>
            </section>
            
            <%- include('../includes/end.ejs') %>